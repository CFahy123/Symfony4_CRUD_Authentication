
{% extends 'base.html.twig' %}

{% block body %}
        {{parent()}}
        <div class="container">
            {% for article in articles %}
            <div class="card mb-3" style="width: 18rem;">
                <img class="card-img-top" src="https://via.placeholder.com/125x100.png/?text=Sample+Text" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title">{{ article.title }}</h5>
                  <p class="card-text">{{ article.body }}</p>
                  <a href="{{ path('article_edit',{id:article.id}) }}" class="btn btn-primary mr-3">Edit</a>
                  <a href="{{ path('article_delete',{id:article.id}) }}" class="btn btn-danger">Delete</a>
                </div>
              </div>
            {% endfor %}
        </div>
{% endblock %}
